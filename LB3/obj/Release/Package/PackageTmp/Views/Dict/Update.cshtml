
@{
    Layout = null;
    string oldContact = @Request.Params.Get("contact");
    string oldLastName = oldContact.Substring(0, oldContact.IndexOf("_"));
    string oldPhone = oldContact.Substring(oldContact.IndexOf("_") + 1, oldContact.Length - oldLastName.Length - 1);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update page</title>
</head>
<body>
    <form method="post" action="~/Dict/UpdateSave?oldLastname=@oldLastName&oldPhone=@oldPhone">
        <label>Old contact: @oldLastName - @oldPhone</label>
        <br /><br />
        <br /><br />
        <label>Enter new lastname: </label> <input type="text" value="temp" name="lastname" />
        <br /><br />
        <label>Enter new phone number: </label> <input type="tel" name="phone" />
        <br /><br />
        <input type="submit" value="Save to JSON(UPDATE)" />
    </form>
</body>
</html>
