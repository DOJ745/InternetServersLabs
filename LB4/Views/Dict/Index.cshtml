
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <form method="get" action="~/Dict/Add"><input type="submit" value="Add contact" /></form>
        <hr />
        @foreach (var item in ViewBag.PhoneBooks)
        {
            @item.Name
            <br />
            @item.Number
            <table>
                <tr>
                    <td>
                        <form method="get" action="~/Dict/Update"><input type="submit" value="Update" />
                        <input type="hidden" name="id" value="@item.Id" /></form>
                    </td>

                    <td>
                    <form method="get" action="~/Dict/Delete"><input type="submit" value="Delete" /> 
                        <input type="hidden" name="id" value="@item.Id" />
                        </form></td>
                </tr>
            </table>
            <hr />
        }
    </div>
</body>
</html>
